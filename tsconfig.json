{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "es6",
    "resolveJsonModule": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "baseUrl": "src",
    "paths": {
      "config/*": [
        "config/*"
      ],
      "controllers/*": [
        "controllers/*"
      ],
      "entities/*": [
        "entities/*"
      ],
      "helpers/*": [
        "helpers/*"
      ],
      "services/*": [
        "services/*"
      ],
      "modules/*": [
        "modules/*"
      ],
      "types/*": [
        "types/*"
      ]
    },
    "lib": [
      "esnext"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}